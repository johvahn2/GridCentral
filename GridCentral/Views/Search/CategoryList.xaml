<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridCentral.Views.Search.CategoryList"
             BackgroundColor="#1C355E"
             Title="Shop by Categories">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_shopping_cart_w.png" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Your Categories" TextColor="White"
                       FontAttributes="Bold" FontSize="Default" Margin="15,15,15,10"/>
                <Frame>
                    <StackLayout x:Name="myIntrests"></StackLayout>
                </Frame>
                
                <Label Text="All Categories" TextColor="White"
                       FontAttributes="Bold" FontSize="Default" Margin="15,15,15,10"/>
                <Frame>
                    <StackLayout x:Name="allCategories"></StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>