<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridCentral.Views.Auth.NewPassword"             
             BackgroundColor="#eeeeee"
             Title="New Password">
    <AbsoluteLayout>
        <Frame AbsoluteLayout.LayoutBounds="0.5,0.4,300,200" AbsoluteLayout.LayoutFlags="PositionProportional">
            <StackLayout>
                <Entry Placeholder="New Password" IsPassword="True" Text="{Binding NewPassword}"/>
                <Entry Placeholder="Re-Password" IsPassword="True" Text="{Binding RePassword}"/>
            </StackLayout>
        </Frame>

        <Button Text="Update" Command="{Binding UpdateCommand}" BackgroundColor="{DynamicResource AccentColor}" TextColor="White"
                AbsoluteLayout.LayoutBounds="0.5,0.7,200,50" AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>