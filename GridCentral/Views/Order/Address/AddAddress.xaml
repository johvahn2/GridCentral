<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridCentral.Views.Order.AddAddress"
             BackgroundColor="#eeeeee"
             Title="Add Address">
    <AbsoluteLayout>
        <Frame AbsoluteLayout.LayoutBounds="0.5,0.4,300,200" AbsoluteLayout.LayoutFlags="PositionProportional">
            <StackLayout>
                <Entry Placeholder="Address 1" Text="{Binding Address1}"/>
                <Entry Placeholder="Address 2" Text="{Binding Address2}"/>
                <Entry Placeholder="PhoneNumber" Text="{Binding Phone}"/>
            </StackLayout>
        </Frame>

        <Button Text="{Binding BtnText}" Command="{Binding BtnCommand}" BackgroundColor="{DynamicResource AccentColor}" TextColor="White"
                AbsoluteLayout.LayoutBounds="0.5,0.7,200,50" AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>